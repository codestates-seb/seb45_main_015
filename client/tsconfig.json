{
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["es6", "dom"],
    "rootDir": "src",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowJs": true,
    "outDir": "./dist"
  },
  "include": ["./src","src/@types/custom.d.tsx"],
  "exclude": ["node_modules", "build"]
  
}